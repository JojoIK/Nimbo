{
  "name": "weather-forecast-api-service",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest ui",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "build": "echo Build complete",
    "lint": "eslint config middlewares modules prisma tests utils server.js",
    "lint:fix": "eslint config middlewares modules prisma tests utils server.js --fix",
    "format": "prettier --write",
    "seed": "node scripts/seed-location.js",
    "cache:clear": "node scripts/clear-cache.js",
    "alerts:monitor": "node scripts/monitor-alerts.js",
    "health:check": "node scripts/health-check.js"
  },
  "keywords": [
    "weather",
    "forcast",
    "api",
    "openweathermap",
    "weatherapi",
    "caching",
    "data-transformation",
    "rate-limiting",
    "express"
  ],
  "author": "Joan Ikwen joanikwen@gmail.com",
  "license": "MIT",
  "description": "A comprehensive weather forecast API with caching, data transformation, and multi-source integration",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@prisma/client": "^6.11.1",
    "axios": "^1.10.0",
    "axios-retry": "^4.5.0",
    "bcryptjs": "^3.0.2",
    "canvas": "^3.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "geolib": "^3.3.4",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "p-limit": "^6.2.0",
    "p-retry": "^6.2.1",
    "sharp": "^0.34.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "nock": "^14.0.5",
    "nodemon": "^3.1.9",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "supertest": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
